{# Usage: {% include 'components/card.html.twig' with {title: 'Card Title', padding: 'lg'} %} #}
{% set padding = padding|default('md') %}
{% set shadow = shadow|default('md') %}

{% set padding_classes = {
    'sm': 'p-4',
    'md': 'p-6',
    'lg': 'p-8'
} %}

{% set shadow_classes = {
    'sm': 'shadow-sm',
    'md': 'shadow-md',
    'lg': 'shadow-lg',
    'xl': 'shadow-xl'
} %}

<div class="bg-white dark:bg-gray-800 rounded-lg {{ shadow_classes[shadow] }} {{ padding_classes[padding] }} {{ class|default('') }}">
    {% if title %}
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{{ title }}</h3>
    {% endif %}
    
    {% block content %}
        {{ content|raw }}
    {% endblock %}
</div>